{
  "permissions": {
    "allow": [
      "Git",
      "Git(git:*)",
      "Bash(npm run build:*)",
      "Bash(timeout 5 npm run dev:*)",
      "Bash(npm install:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(pkill:*)",
      "Bash(npm test:*)",
      "Bash(curl:*)",
      "Bash(ls:*)",
      "Bash(npx tsc:*)",
      "Bash(grep:*)"
    ]
  },
  "sandbox": {
    "enabled": false,
    "autoAllowBashIfSandboxed": false
  }
}
